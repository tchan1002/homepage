<div>
  <div>
    <h1>
      Entry #<%= @the_entry.id %> details
    </h1>

    <div>
      <div>
        <a href="/entries">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_entry/<%= @the_entry.id %>">
          Delete entry
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @the_entry.title %>
      </dd>

      <dt>
        Body
      </dt>
      <dd>
        <%= @the_entry.body %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_entry.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_entry.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit entry
    </h2>

    <form action="/modify_entry/<%= @the_entry.id %>"  method="post" >
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_entry.title %>">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body"><%= @the_entry.body %></textarea>
      </div>

      <button>
        Update entry
      </button>
    </form>
  </div>
</div>

<hr>
